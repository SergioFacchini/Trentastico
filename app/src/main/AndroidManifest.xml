<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="trentastico.geridea.com.trentastico">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".TrentasticoApplication">

        <activity android:name=".gui.activities.FirstActivityChooserActivity"
            android:screenOrientation="portrait"
            android:noHistory="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".gui.activities.WelcomeActivity"/>

        <activity android:name=".gui.activities.CalendarActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"/>

    </application>

</manifest>