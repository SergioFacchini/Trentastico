<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundMain"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/diff_type"
        style="@style/TextForegroundBig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="La lezione ha subito variazioni:"
        android:textColor="@color/colorForeground" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/courseName"
            style="@style/TextForegroundBig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:text="Nome corso" />


        <TextView
            android:id="@+id/scheduled_at_day"
            style="@style/TextForegroundMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:text="Pianificata per VenerdÃ¬ 13 Gennaio" />

        <TextView
            android:id="@+id/scheduled_at_hours"
            style="@style/TextForegroundMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:text="Alle ore: " />


        <TextView
            android:id="@+id/lesson_duration"
            style="@style/TextForegroundMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:text="Durata: " />

        <TextView
            android:id="@+id/modifications"
            style="@style/TextForegroundMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:text="Modifiche"
            android:textStyle="bold"
            android:visibility="visible" />

    </LinearLayout>


</LinearLayout>